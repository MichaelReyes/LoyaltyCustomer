<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/profile_tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/profile_etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profile_tvMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number : "/>

    <EditText
        android:id="@+id/profile_etMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"/>

    <TextView
        android:id="@+id/profile_tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email : " />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/profile_etEmail" />

    <TextView
        android:id="@+id/profile_tvBirthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birth Date : " />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/profile_etBirthDate" />

    <TextView
        android:id="@+id/profile_tvGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender : " />


    <Spinner
        android:id="@+id/profile_sGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/gender_array"
        android:prompt="@string/gender_prompt" />

    <TextView
        android:id="@+id/profile_tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City : " />

    <Spinner
        android:id="@+id/profile_sCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/city_array"
        android:prompt="@string/city_prompt" />

    <TextView
        android:id="@+id/profile_tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security Password : "
        android:visibility="gone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/profile_etPassword"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/profile_tvServerUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server URL : "
        android:visibility="gone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="http://apps.gs3.com.ph:9002"
        android:id="@+id/profile_etServerUrl"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">



        <Button
            android:id="@+id/profile_bSave"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_margin="4dp"
            android:background="@drawable/btn_ok"/>

        <Button
            android:id="@+id/profile_bCancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_margin="4dp"
            android:background="@drawable/btn_cancel" />

    </LinearLayout>


</LinearLayout>