<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <HorizontalScrollView
        android:id="@+id/Main_hsvAnnouncement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Main_tvAnnouncements"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="10pt"
                android:lines="1"/>

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/Main_ivLogo"
            android:layout_width="match_parent"
            android:layout_marginTop="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/zenzest_logo"
            />

        <TextView
            android:id="@+id/Main_tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#686868"
            android:text="Enjoy freebies using our mobile App"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

            <Button
                android:id="@+id/Main_bProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_click_me"
                android:textColor="#ffffff" />

        <Button
            android:id="@+id/Main_bRefreshPresence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/btn_click_iamhere"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/Main_bHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/btn_click_history"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/Main_tvViewPromo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:background="@drawable/btn_click_viewpromo"
            android:layout_margin="4dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>


</RelativeLayout>